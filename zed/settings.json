// Zed settings - Best Practices Configuration (2025)
// Documentation: https://zed.dev/docs/configuring-zed
// Open default settings with: zed: open default settings
{
  // === THEME ===
  "base_keymap": "Cursor",
  "icon_theme": "Material Icon Theme",
  "theme": "One Dark Pro Night Flat",

  // === TYPOGRAPHY ===
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_size": 14,
  "buffer_font_weight": 400,
  "buffer_line_height": {
    "custom": 1.6,
  },
  "buffer_font_features": {
    "calt": true,
    "liga": true,
  },

  // === UI FONT ===
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 14,

  // === EDITOR BEHAVIOR ===
  "tab_size": 4,
  "hard_tabs": false,
  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 120,
  "show_wrap_guides": true,
  "wrap_guides": [100, 120],

  // === CURSOR ===
  "cursor_blink": true,
  "cursor_shape": "bar",
  "current_line_highlight": "gutter",

  // === SCROLLING ===
  "vertical_scroll_margin": 3,
  "scroll_sensitivity": 1.0,

  // === SCROLLBAR ===
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": "all",
  },

  // === GUTTER ===
  "gutter": {
    "line_numbers": true,
    "runnables": true,
    "breakpoints": true,
    "folds": true,
  },

  // === INDENT GUIDES ===
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled",
  },

  // === COMPLETIONS ===
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "use_autoclose": true,
  "use_auto_surround": true,
  "always_treat_brackets_as_autoclosed": false,

  // === INLAY HINTS ===
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": false,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
  },

  // === FORMATTING ===
  "format_on_save": "on",
  "formatter": "auto",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,

  // === FILE HANDLING ===
  "autosave": {
    "after_delay": {
      "milliseconds": 1000,
    },
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.DS_Store",
    "**/.cache",
    "**/node_modules",
    "**/vendor",
    "**/.next",
    "**/dist",
    "**/build",
    "**/__pycache__",
    "**/.venv",
    "**/target",
  ],

  // === FILE TYPE ASSOCIATIONS ===
  "file_types": {
    "JSONC": ["**/.zed/**/*.json", "**/zed/**/*.json", "**/.vscode/**/*.json"],
    "Shell Script": [".env.*"],
  },

  // === PROJECT PANEL ===
  "project_panel": {
    "button": true,
    "default_width": 260,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 16,
    "auto_reveal_entries": true,
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": "auto",
    },
  },

  // === OUTLINE PANEL ===
  "outline_panel": {
    "button": true,
    "default_width": 260,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 16,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
  },

  // === TABS ===
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_diagnostics": "errors",
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true,
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_project_panel": true,
  },

  // === TERMINAL ===
  "terminal": {
    "shell": {
      "program": "zsh",
    },
    "dock": "bottom",
    "default_width": 640,
    "default_height": 320,
    "working_directory": "current_project_directory",
    "blinking": "on",
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 14,
    "line_height": {
      "custom": 1.4,
    },
    "toolbar": {
      "breadcrumbs": true,
    },
  },

  // === GIT ===
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 600,
    },
  },
  "git_panel": {
    "dock": "left",
  },

  // === AI & EDIT PREDICTIONS ===
  // Zeta is Zed's open-source edit prediction model
  "features": {
    "edit_prediction_provider": "zed",
  },
  // Fine-tune edit predictions behavior
  "show_edit_predictions": true,
  "edit_predictions": {
    // Exclude sensitive files from predictions
    "disabled_globs": ["**/.env", "**/.env.*", "**/secrets.*", "**/*.pem", "**/*.key"],
  },

  // === AGENT PANEL (AI Assistant) ===
  "agent": {
    "enabled": true,
    "button": true,
    "dock": "right",
    "default_width": 480,
    // Claude Opus 4.5 as default model
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-opus-4-5",
    },
    "expand_edit_card": true,
    "expand_terminal_card": true,
  },

  // === COLLABORATION PANEL ===
  "collaboration_panel": {
    "button": true,
    "dock": "left",
    "default_width": 260,
  },

  // === NOTIFICATION PANEL ===
  "notification_panel": {
    "button": true,
    "dock": "right",
    "default_width": 380,
  },

  // === SEARCH ===
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false,
  },

  // === LSP (Language Server) ===
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy",
        },
      },
    },
  },

  // === LANGUAGE-SPECIFIC SETTINGS ===
  "languages": {
    "JavaScript": {
      "tab_size": 2,
      "formatter": "prettier",
      "format_on_save": "on",
    },
    "TypeScript": {
      "tab_size": 2,
      "formatter": "prettier",
      "format_on_save": "on",
    },
    "TSX": {
      "tab_size": 2,
      "formatter": "prettier",
      "format_on_save": "on",
    },
    "JSON": {
      "tab_size": 2,
      "formatter": "prettier",
      "format_on_save": "on",
    },
    "JSONC": {
      "tab_size": 2,
      "formatter": "prettier",
      "format_on_save": "on",
    },
    "SCSS": {
      "formatter": "prettier",
      "format_on_save": "on",
    },
    "CSS": {
      "formatter": "prettier",
      "format_on_save": "on",
    },
    "HTML": {
      "formatter": "prettier",
      "format_on_save": "on",
    },
    "Markdown": {
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 80,
      "format_on_save": "off",
      "show_edit_predictions": false,
    },
    "Python": {
      "tab_size": 4,
      "formatter": {
        "external": {
          "command": "black",
          "arguments": ["-"],
        },
      },
      "format_on_save": "on",
    },
    "Rust": {
      "tab_size": 4,
      "formatter": "language_server",
      "format_on_save": "on",
    },
    "YAML": {
      "tab_size": 2,
      "show_edit_predictions": false,
    },
  },

  // === TELEMETRY ===
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },

  // === WINDOW ===
  "confirm_quit": false,
  "restore_on_startup": "last_session",
  "restore_on_file_reopen": true,
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15,
  },

  // === TOOLBAR ===
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true,
  },

  // === AUTO-UPDATE ===
  "auto_update": true,

  // === AUTO-INSTALL EXTENSIONS (Optional) ===
  "auto_install_extensions": {
    "python": true,
    "rust": true,
    "toml": true,
    "docker": true,
    "git-firefly": true,
  },
}
